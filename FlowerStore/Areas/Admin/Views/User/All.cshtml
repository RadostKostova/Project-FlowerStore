@using FlowerStore.Core.ViewModels.User
@model IEnumerable<UserAllViewModel>

@{
    ViewBag.Title = "All Users";
}

<h1>All Users</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.PhoneNumber</td>
            </tr>
        }
    </tbody>
</table>