@{
    ViewData["Title"] = "Happy Flower Co.";
}

<div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
    <div class="carousel-inner" style="height: 100vh;">

        @* First Slide *@
        <div class="carousel-item active d-flex justify-content-center align-items-center" style="height: 100%;">
            <img src="/img/carousel1.jpg" class="d-block w-100" alt="First slide"
                 style="object-fit: cover; position: absolute; height: 100%; width: 100%; z-index: -1;">
            <div class="text-center">
                <h1 class="text-black fst-italic fw-bold">Discover Our Stunning Flower Catalog</h1>
                <div class="text-black mt-4">
                    <p class="mb-0">Whether you're looking for vibrant bouquets, elegant arrangements, or unique gifts, </p>
                    <p class="mb-0">our catalog offers an exquisite selection of flowers for every occasion.</p>
                    <p class="mb-4">Browse now and find the perfect choice for your needs.</p>
                </div>
                <a class="btn btn-warning mt-3 fw-bold" asp-area="" asp-controller="Product" asp-action="Catalog">Browse Catalog</a>
            </div>
        </div>

        @* Second Slide *@
        <div class="carousel-item d-flex justify-content-center align-items-center" style="height: 100%;">
            <img src="/img/carousel2.png" class="d-block w-100" alt="Second slide"
                 style="object-fit: cover; position: absolute; height: 100%; width: 100%; z-index: -1;">
            <div class="text-center">
                <h1 class="text-black fst-italic fw-bold">Seasonal Specials</h1>
                <p class="text-black">Check out our exclusive seasonal flower arrangements.</p>
                <a class="btn btn-warning mt-3 fw-bold" asp-area="" asp-controller="Product" asp-action="Seasonal">Explore Now</a>
            </div>
        </div>

        @* Third Slide *@
        <div class="carousel-item d-flex justify-content-center align-items-center" style="height: 100%;">
            <img src="/img/carousel3.jpg" class="d-block w-100" alt="Third slide"
                 style="object-fit: cover; position: absolute; height: 100%; width: 100%; z-index: -1;">
            <div class="text-center">
                <h1 class="text-black fst-italic fw-bold">Contact Us for Custom Orders</h1>
                <div class="text-black mt-4">
                    <p class="mb-0">Need something special? We're here to help.</p>
                    <p class="mb-0">Share your vision with us, and we'll create a personalized flower arrangement</p>
                    <p class="mb-4">that captures the essence of your ideas.</p>
                </div>
                <a class="btn btn-warning mt-3 fw-bold" asp-area="" asp-controller="Home" asp-action="Contact">Get in Touch</a>
            </div>
        </div>

    </div>

    @* Controls *@
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>