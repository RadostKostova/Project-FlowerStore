@using FlowerStore.Core.ViewModels.Order
@model OrderFormViewModel

@{
    ViewBag.Title = "Fill In Your Shipping Details";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="text-center fst-italic">@ViewBag.Title</h2>
        <hr />

        <form asp-area="" asp-controller="Order" asp-action="ShippingDetails" method="post">
            <div class="form-group mb-3">
                <label asp-for="@Model.FirstName">First Name</label>
                <input asp-for="@Model.FirstName" class="form-control"/>
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="@Model.LastName">Last Name</label>
                <input asp-for="@Model.LastName" class="form-control" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="@Model.Email">Email</label>
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="@Model.Phone">Phone number</label>
                <input asp-for="@Model.Phone" class="form-control" />
                <span asp-validation-for="@Model.Phone" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="@Model.ShippingAddress">Delivery address</label>
                <input asp-for="@Model.ShippingAddress" class="form-control" placeholder="Write your full address" />
                <span asp-validation-for="@Model.ShippingAddress" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="@Model.OrderDetails">Order Details (If any)</label>
                <textarea asp-for="@Model.OrderDetails" class="form-control" placeholder="Write your additional request here (Birthday cards, Giftpack color and etc)"></textarea>
            </div>

            <div class="form-group mb-3">
                <label asp-for="@Model.PaymentMethodId">Choose payment method:</label>
                <select id="PaymentMethodId" name="PaymentMethodId" class="form-control">
                    @foreach (var paymentMethod in Model.PaymentMethods)
                    {
                        <option value="@paymentMethod.Id">@paymentMethod.Name</option>
                    }
                </select>
            </div>

            <div class="col-12 text-center">
                <button type="submit" class="btn btn-warning fw-bold">Proceed</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}