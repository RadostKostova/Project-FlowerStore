@using FlowerStore.Core.ViewModels.Product
@model ProductDetailsViewModel

@{
    ViewBag.Title = "Product Details";
}

<h2 class="text-center fst-italic">@Model.Name</h2>
<hr />

<div class="container">
    <div class="row justify-content-center">

        <div class="col-md-4 text-center">
            <img src="@Model.ImageUrl" class="img-fluid mw-100 mb-2" alt="Product-image" />
        </div>

        <div class="col-md-8">
            <p class="mb-0 mt-3"><span class="fw-bold">Product Name: </span>@Model.Name</p>
            <p class="mb-0"><span class="fw-bold">Price: </span>@Model.Price BGN</p>
            <p class="mb-0"><span class="fw-bold">Product added on: </span>@Model.DateAdded</p>
            <p class="mb-0"><span class="fw-bold">Availability: </span>@Model.Availability</p>
            <p class="mb-0"><span class="fw-bold">Category: </span>@Model.Category</p>
            <p class="mb-5"><span class="fw-bold">Description: </span>@Model.FullDescription</p>
        </div>
    </div>

    @if (User.Identity?.IsAuthenticated != false)
    {
        <form method="post" asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-id="@Model.Id">
            <input type="hidden" name="productId" value="@Model.Id" />
            <button type="submit" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Add To Cart</button>
        </form>
    }
    <a asp-controller="Product" asp-action="Catalog" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Back to the Catalog</a>
</div>
