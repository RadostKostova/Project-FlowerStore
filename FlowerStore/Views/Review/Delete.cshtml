@using FlowerStore.Core.ViewModels.Review
@model ReviewDeleteViewModel

@{
    ViewBag.Title = "Delete Review";
}

<h1 class="text-center mb-4 fst-italic">Delete Review</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <h5 class="text-center text-danger fw-bold mb-4"><strong>Are you sure you want to delete this review?</strong></h5>

            <div class="blockquote text-center">
                <p class="mb-4" style="font-size: 1.5rem; font-style: italic; color: #6c757d;">"@Model.Content"</p>
            </div>

            <form asp-area="" asp-controller="Review" asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-danger me-2">Confirm</button>
                    <a asp-action="All" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>